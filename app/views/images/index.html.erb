<h1>Listing images</h1>

<% @images.each do |image| %>
		<div class="imagebox">
		<div class="image">
			<%= image_tag image.picture.url(:thumb), :class => "image" %> 
		</div>
		<div class="imagetext">
			<%= image.title %>
			<%= image.description %>
			<div class="exif" id="exif_<%=image.id%>" >Exif</div>
			<div class="exifdata ">
				Cameramodel:
				<%= EXIFR::JPEG.new(image.picture.path).model %>
			</div>
			<%= link_to 'Show', image %>
			<%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %>
		</div>
	</div>
<% end %>

