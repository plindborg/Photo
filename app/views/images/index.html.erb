<h1>Listing images</h1>
<div id="content">
<% @images.each do |image| %>
		<div class="imagebox">
		<div class="image">
			<a href="<%= image.picture.url %>" class="fancybox" title=<%= image.title %> >
				<%= image_tag image.picture.url(:medium), :class => "image" %> 
			</a>		
		</div>
		<div class="imagetext">
			<%= image.title %>
			<br>
			<%= image.description %>
			<div class="exif" id="exif_<%=image.id%>" >Exif
				<div class="exifdata ">
					Cameramodel:
					<%= EXIFR::JPEG.new(image.picture.path).model %>
					<br>
					Date:
					<%= EXIFR::JPEG.new(image.picture.path).date_time  %>
					<br>
					Exposure:
					<%= EXIFR::JPEG.new(image.picture.path).exposure_time.to_s  %>

				</div>
			</div>
			<%= link_to 'Show', image %>
			<%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %>
		</div>
	</div>
<% end %>
</div>

<br />

